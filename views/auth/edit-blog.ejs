<h1>EDIT BLOG</h1>

<form class="auth-form" action="/auth/edit-blog/<%= data.id %>" method="POST">
  <label for="username">Title</label>
  <input
    type="text"
    name="title"
    id="title"
    required
    value="<%= data.title %>"
  />

  <label for="body">Body</label>
  <textarea name="body" id="body" value="<%= data.body %>" required>
<%= data.body %></textarea
  >

  <label for="author">Author</label>
  <input
    type="text"
    name="author"
    id="author"
    value="<%= data.author %>"
    required
  />

  <button type="submit">Save</button>
</form>
