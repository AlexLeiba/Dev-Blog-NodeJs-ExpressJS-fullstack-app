<div class="author">
  <h1 class="author__heading">Search Results</h1>

  <% if (data?.length === 0) { %>
  <p class="no-search-results-found">No results found</p>
  <% } %>
</div>

<section class="articles">
  <ul class="article-ul">
    <% data?.forEach(post => { %>
    <div>
      <li>
        <a href="/article/<%= post._id %>">
          <div>
            <span><%= post.title %></span>
            <p class="dashboard-author"><%= post.author %></p>
          </div>

          <span class="article-list-date"
            ><%= post.createdAt.toDateString() %></span
          >
        </a>
        <div class="list-separator"></div>
      </li>
    </div>
    <% }) %>
  </ul>
</section>
